<?xml version="1.0" encoding="UTF-8"?>
<testdefinition version="1.0">
	<suite name="sailfish-connman-iptables-plugin-tests" domain="connectivity">
		<description>Sailfish Connman iptables plugin automatic tests</description>
		<set name="ete-tests" feature="Sailfish Connman iptables plugin">
			<description>Sailfish Connman iptables plugin end-to-end tests OLD API</description>
			<case manual="false" name="End-to-end test as root">
				<step>PATH=/sbin:$PATH /usr/sbin/run-blts-root /opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-test
				</step>
			</case>
			<case manual="false" name="End-to-end test as privileged user">
				<step>PATH=/sbin:$PATH /usr/sbin/run-blts-root /bin/su -g privileged -c '/opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-test' nemo
				</step>
			</case>
			<case manual="false" name="End-to-end test as regular user">
				<step>/opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-test
				</step>
			</case>
		</set>
		<set name="ete-tests-stable" feature="Sailfish Connman iptables plugin">
			<description>Sailfish Connman iptables plugin end-to-end tests STABLE API</description>
			<case manual="false" name="End-to-end STABLE test as root" timeout="150">
				<step>PATH=/sbin:$PATH /usr/sbin/run-blts-root /opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-stable-test
				</step>
			</case>
			<case manual="false" name="End-to-end STABLE test as privileged user" timeout="150">
				<step>PATH=/sbin:$PATH /usr/sbin/run-blts-root /bin/su -g privileged -c '/opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-stable-test' nemo
				</step>
			</case>
			<case manual="false" name="End-to-end STABLE test as regular user" timeout="150">
				<step>/opt/tests/sailfish-connman-iptables-plugin/ete-test/sailfish-connman-iptables-plugin-stable-test
				</step>
			</case>
		</set>
		<set name="save-and-restore" feature="Sailfish Connman iptables plugin">
			<description>Sailfish Connman iptables plugin save and restore tests</description>
			<case manual="false" name="Save and restore iptables test as root">
				<step>PATH=/sbin:$PATH /usr/sbin/run-blts-root /opt/tests/sailfish-connman-iptables-plugin/save-restore-test/sailfish-connman-iptables-plugin-save-restore-test
				</step>
			</case>
		</set>
   </suite>
</testdefinition>
